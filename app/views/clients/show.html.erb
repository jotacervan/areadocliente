<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <title>Mobile2you | Detalhes do Cliente</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
  <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">
  <!-- iCheck -->
  <link rel="stylesheet" href="/plugins/iCheck/flat/blue.css">
  <!-- Morris chart -->
  <link rel="stylesheet" href="/plugins/morris/morris.css">
  <!-- jvectormap -->
  <link rel="stylesheet" href="/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
  <!-- Date Picker -->
  <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
  <link rel="stylesheet" href="/plugins/datepicker/datepicker3.css">
  <!-- Daterange picker -->
  <link rel="stylesheet" href="/plugins/daterangepicker/daterangepicker.css">
  <!-- bootstrap wysihtml5 - text editor -->
  <link rel="stylesheet" href="/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>

</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%= render 'home/header' %>
  
  <%= render 'home/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Detalhes do Cliente
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="<%= clients_path %>" ><i class="fa fa-dashboard"></i> Clientes</a></li>
        <li class="active">Detalhes do Cliente</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      
      <!-- Main row -->
      <div class="row">
       <div class="col-xs-6">

          <div class="box box-info">
            <div class="box-header">
              <h3 class="box-title"><%= @client.name %></h3>
              <a href="<%= edit_client_path(@client.id) %>" class="btn btn-info btn-sm pull-right"><i class="fa fa-pencil"></i> Editar</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <strong><i class="fa fa-phone margin-r-5"></i> Telefone</strong>
              <p class="text-muted"><%= @client.phone %></p>
              <hr>

              <strong><i class="fa fa-file-text margin-r-5"></i> Proposta</strong>
              <p class="text-muted"><%= @client.contract %></p>
              <hr>

              <strong><i class="fa fa-globe margin-r-5"></i> Endereço</strong>
              <p class="text-muted"><%= @client.street %> <%= @client.number %> comp. <%= @client.complement %>, <%= @client.neighborhood %>, <%= @client.city %> - <%= @client.state %></p>
              <hr>

              <strong><i class="fa fa-users margin-r-5"></i> Qtd de Usuários</strong>
              <p class="text-muted"><%= pluralize(@client.users.length, 'Usuário', 'Usuários') %></p>          

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- USERS LIST -->
          <div class="box box-warning">
            <div class="box-header with-border">
              <h3 class="box-title">Usuários</h3>
              <a href="#novo-user" data-toggle="modal" class="btn btn-warning btn-sm pull-right"><i class="fa fa-user-plus"></i> Novo Usuário</a>


              <div id="novo-user" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title">Novo Usuário para <%= @client.name %></h4>
                    </div>
                    <div class="modal-body">
                      <%= form_for @user do |f| %>
                      
                       <div class="row">
                        <div class="col-md-6">
                          <p>
                            <%= f.label :nome %><br>
                            <%= f.text_field :name, :class => 'form-control', :placeholder => 'Nome' %>
                          </p>
                          <p>
                            <%= f.label :email %><br>
                            <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %>
                          </p>
                          <p>
                            <%= f.label :telefone %><br>
                            <%= f.text_field :phone, :class => 'form-control', :placeholder => 'Telefone' %>
                          </p>
                          <p>
                            <%= f.label :senha %><br>
                            <%= f.password_field :password, :class => 'form-control', :placeholder => 'Senha' %>
                          </p>
                        </div>
                        <div class="col-md-6">
                          <p>
                            <%= f.label :rg %><br>
                            <%= f.text_field :rg, :class => 'form-control', :placeholder => 'RG' %>
                          </p>

                          <p>
                            <%= f.label :cpf %><br>
                            <%= f.text_field :cpf, :class => 'form-control', :placeholder => 'CPF' %>
                          </p>

                          <p>
                            <%= f.label :login %><br>
                            <%= f.text_field :login, :class => 'form-control', :placeholder => 'Login' %>
                          </p>

                          <p>
                            <%= f.label :confirmação_de_senha %><br>
                            <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirmação de Senha' %>
                          </p>

                            <%= f.hidden_field :redirect, :value => 'clients' %>

                            <%= f.hidden_field :user_type, :value => 'User' %>
                          
                            <%= f.hidden_field :client_id, :value => @client.id %>
                          
                        </div>
                       </div>
                       
                        <p>
                          <%= f.submit( {:class => 'btn btn-primary'}) %>
                        </p>
                       
                      <% end %>
                    </div>
                  </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
              </div><!-- /.modal -->


            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <ul class="users-list clearfix">
              <% usuarios = @client.users.order(created_at: :desc) %>
                <% usuarios.take(8).each do |u| %>
                  <li>
                  <img src="<%= u.picture.url(:thumb) %>" style="width:128px; height:128px" alt="User Image">
                  <a class="users-list-name" href="#"><%= u.name %></a>
                  <span class="users-list-date"><%= u.created_at.strftime('%d %h') %></span>
                </li>
                <% end %>
              </ul>
              <!-- /.users-list -->
            </div>
          </div>
          <!--/.box -->


        </div>

        <div class="col-md-6">
          
          <div class="box box-danger">
            <div class="box-header">
              <h3 class="box-title">Projetos</h3>
              <a href="#novo-projeto" data-toggle="modal" class="btn btn-danger btn-sm pull-right"><i class="fa fa-plus"></i> Novo Projeto</a>

              <div id="novo-projeto" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title">Novo Projeto para <%= @client.name %></h4>
                    </div>
                    <div class="modal-body">
                      <%= form_for @core do |f| %>
                      
                       <div class="row">
                        <div class="col-md-6">
                          <p>
                            <%= f.label :nome %><br>
                            <%= f.text_field :name, :class => 'form-control', :placeholder => 'Nome' %>
                          </p>
                          
                        </div>
                        <div class="col-md-6">
                              <p>
                                <%= f.label :descrição %><br>
                                <%= f.text_field :description, :class => 'form-control', :placeholder => 'Descrição' %>
                              </p>
                        </div>
                       </div>
                          
                        <%= f.hidden_field :client_id, :value => @client.id %>
                        
                        <p>
                          <%= f.submit( {:class => 'btn btn-primary'}) %>
                        </p>
                        
                      <% end %>
                    </div>
                  </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
              </div><!-- /.modal -->


            </div>
            <!-- /.box-header -->
            <div class="box-body">
              
              <table class="table table-bordered">
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Projeto</th>
                  <th>Estágios</th>
                  <th>Progresso</th>
                  <th style="width: 40px">Label</th>
                  <th style="width:115px"></th>
                  
                </tr>
                <% @client.cores.each_with_index do |c,key| 

                  if c.stages.length > 0
                  else
                    percentil = 0
                  end
                %>
                <tr>
                  <td><%= key %>.</td>
                  <td><%= c.name %></td>
                  <td><%= c.stages.length %></td>
                  <td>
                    <div class="progress progress-xs">
                      <div class="progress-bar progress-bar-danger" style="width: <%= percentil %>%"></div>
                    </div>
                  </td>
                  <td><span class="badge bg-red"><%= percentil %>%</span></td>
                  <td>
                    <div class="btn-group">
                          <button type="button" class="btn btn-default">Opções</button>
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                              <li><a href="<%= core_path(c.id) %>"><i class="fa fa-eye"></i> Visualizar</a></li>
                              <li><a href="#edit-core-<%= c.id %>" data-toggle="modal"><i class="fa fa-pencil"></i> Editar Projeto</a></li>
                              <li><a href="<%= core_path(c.id) %>" data-confirm="Tem certeza que deseja deletar o projeto <%= c.name %>?" data-method="delete" rel="nofollow"><i class="fa fa-trash"></i> Deletar projeto</a></li>
                          </ul>
                      </div>
                  </td>
                </tr>
                <% end %>
              </table>       

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

        </div>
        <!-- /. col  -->

      </div>
      <!-- /.row (main row) -->



    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Version</b> 2.3.8
    </div>
    <strong>Copyright &copy; 2017 <a href="http://mobile2you.com.br">Mobile2You</a>.</strong> All rights
    reserved.
  </footer>

 
</div>
<!-- ./wrapper -->

    <% if flash[:alert] %>
        <div id="flash" class="modal modal-warning fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Alerta</h4>
              </div>
              <div class="modal-body">
                <p><%= flash[:alert] %></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Fechar</button>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    <% end %>

<!-- jQuery 2.2.3 -->
<script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
<!-- jQuery UI 1.11.4 -->
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
  $.widget.bridge('uibutton', $.ui.button);
</script>
<!-- Bootstrap 3.3.6 -->
<script src="/bootstrap/js/bootstrap.min.js"></script>

<!-- AdminLTE App -->
<script src="/dist/js/app.min.js"></script>
<script src="/dist/js/mask.js"></script>

<script src="/plugins/datatables/jquery.dataTables.js"></script>
<script src="/plugins/datatables/dataTables.bootstrap.js"></script>

